<scene>
	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="16"/>
	</sampler>

	<!-- Use a direct illumination integrator -->
	<integrator type="direct">
		<integer name="nSamples" value="1"/>
		<string name="measure" value="hemisphere"/>
		<string name="warp-type" value="cosine-hemisphere" />
	</integrator>

	<!-- Illuminate using an area light -->
	<shape type="sphere">
		<point name="center" value="1,-1.5,1.75"/>
        <float name="radius" value="0.1"/>
		<emitter type="area">
			<color name="radiance" value="300,300,300"/>
		</emitter>
	</shape>

	<!-- Analytic sphere shape -->
	<shape type="sphere">
		<point name="center" value="0,0,0"/>
        <float name="radius" value="1"/>
		<bsdf type="diffuse"/>
	</shape>

	<!-- Ground plane -->
	<shape type="obj">
		<string name="filename" value="plane.obj"/>
		<bsdf type="diffuse"/>
		<transform name="toWorld">
			<scale value="100,1,100"/>
			<rotate axis="1,0,0" angle="90"/>
			<translate value="0,0,-1"/>
		</transform>
	</shape>

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0,0,0" origin="4,4,0" up="0,0,1"/>
		</transform>

		<!-- Field of view: 40 degrees -->
		<float name="fov" value="40"/>

		<!-- 768 x 768 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="768"/>
	</camera>
</scene>


