<scene>
	<!-- Independent sample generator, 32 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="32"/>
	</sampler>

	<!-- Use a simple (direct shadow) integrator -->
    <integrator type="simple"/>

	<!-- Illuminate using a point light -->
	<emitter type="point">
		<color name="radiance" value="100,100,100"/>
		<point name="position" value="3,0,5"/>
	</emitter>

	<!-- Teapot mesh -->
	<shape type="obj">
		<string name="filename" value="teapot.obj"/>
		<bsdf type="diffuse"/>
		<transform name="toWorld">
			<scale value="0.5,0.5,0.5"/>
			<rotate axis="1,0,0" angle="90"/>
			<rotate axis="0,0,1" angle="-30"/>
			<translate value="0,0,-1"/>
		</transform>
	</shape>

	<!-- Ground plane -->
	<shape type="obj">
		<string name="filename" value="plane.obj"/>
		<bsdf type="diffuse"/>
		<transform name="toWorld">
			<scale value="100,1,100"/>
			<rotate axis="1,0,0" angle="90"/>
			<translate value="0,0,-1"/>
		</transform>
	</shape>

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0,0,-0.4" origin="4,4,3" up="0,0,1"/>
		</transform>

		<!-- Field of view: 40 degrees -->
		<float name="fov" value="40"/>

		<!-- 768 x 576 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="576"/>
	</camera>
</scene>

